# dLNk Attack Platform Configuration
# Copy this file to .env and update values as needed
# IMPORTANT: Never commit .env file to version control

# ============================================================================
# Core System Configuration
# ============================================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Web Dashboard Configuration
WEB_HOST=0.0.0.0
WEB_PORT=3000
WEB_DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/dlnk.log
JSON_LOG_FILE=logs/dlnk.json

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=dlnk_user
DB_PASSWORD=your-secure-password-here
DB_NAME=dlnk

# Alternative: Use full DATABASE_URL (overrides above settings)
DATABASE_URL=postgresql://dlnk_user:your-secure-password-here@localhost:5432/dlnk

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Alternative: Use full REDIS_URL (overrides above settings)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Security Configuration
# ============================================================================

# Secret Key for JWT and Session Encryption
# IMPORTANT: Generate a random 64-character string for production
# Example: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Web Shell Default Password
# IMPORTANT: Change this from default value
WEBSHELL_PASSWORD=changeme_in_production

# ============================================================================
# LLM Configuration
# ============================================================================

# LLM Provider Selection: openai, ollama, lmstudio, localai
LLM_PROVIDER=ollama

# OpenAI Configuration (if using OpenAI provider)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=

# Ollama Configuration (Local LLM - Free)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=mixtral:latest
OLLAMA_API_KEY=ollama
OLLAMA_TIMEOUT=300

# LM Studio Configuration (Local LLM)
LMSTUDIO_HOST=localhost
LMSTUDIO_PORT=1234
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=local-model
LMSTUDIO_API_KEY=lm-studio

# LocalAI Configuration (Local LLM)
LOCALAI_HOST=localhost
LOCALAI_PORT=8080
LOCALAI_BASE_URL=http://localhost:8080/v1
LOCALAI_MODEL=gpt-3.5-turbo
LOCALAI_API_KEY=local

# LLM Generation Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_TOP_P=0.9
LLM_REQUEST_TIMEOUT=120

# ============================================================================
# C2 (Command & Control) Configuration
# ============================================================================

# C2 Server Configuration
C2_HOST=localhost
C2_PORT=8000
C2_PROTOCOL=http

# Alternative: Use full C2_DOMAIN (overrides above settings)
# C2_DOMAIN=your-server.com:8000

# ============================================================================
# Agent Configuration
# ============================================================================

MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=300
AGENT_RETRY_ATTEMPTS=3

# ============================================================================
# Workflow Configuration
# ============================================================================

WORKFLOW_TIMEOUT=3600
TARGET_TIMEOUT=600
MAX_TARGETS=100

# ============================================================================
# External Tools
# ============================================================================

NMAP_PATH=nmap
METASPLOIT_PATH=/usr/share/metasploit-framework
NUCLEI_PATH=nuclei
SQLMAP_PATH=sqlmap
WPSCAN_PATH=wpscan

# ============================================================================
# Feature Flags
# ============================================================================

# Simulation Mode (True = No real attacks, False = Live attacks)
# IMPORTANT: Set to True for testing, False for production
SIMULATION_MODE=True

# Enable/Disable specific attack capabilities
ENABLE_PERSISTENCE=True
ENABLE_LATERAL_MOVEMENT=True
ENABLE_DATA_EXFILTRATION=True
ENABLE_PRIVILEGE_ESCALATION=True

# ============================================================================
# Performance Configuration
# ============================================================================

CACHE_ENABLED=True
CACHE_TTL=3600

# ============================================================================
# Reporting Configuration
# ============================================================================

REPORT_FORMAT=html
REPORT_INCLUDE_PAYLOADS=False
REPORT_INCLUDE_LOGS=True

# ============================================================================
# Proxy Configuration
# ============================================================================

PROXY_ENABLED=False
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ============================================================================
# Rate Limiting
# ============================================================================

RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# Notifications
# ============================================================================

NOTIFICATION_ENABLED=False
NOTIFICATION_WEBHOOK=
NOTIFICATION_EMAIL=

# ============================================================================
# Workspace
# ============================================================================

WORKSPACE_DIR=workspace
LOOT_DIR=workspace/loot
LOGS_DIR=logs
DATA_DIR=data
REPORTS_DIR=reports

