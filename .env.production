# Production Environment Variables
# Copy this file to .env and fill in the values

# Domain
DOMAIN=your-domain.com

# Database
POSTGRES_USER=manus_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=manus_production

# Redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# API Keys
OPENAI_API_KEY=your_openai_api_key

# C2 Server
C2_ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY

# Logging
LOG_LEVEL=INFO

# Performance
MAX_CONCURRENT_ATTACKS=10

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# SIEM Integration
SPLUNK_HEC_URL=https://splunk.example.com:8088
SPLUNK_HEC_TOKEN=your_splunk_hec_token
ELASTICSEARCH_URL=http://elasticsearch:9200

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# SSL/TLS (for Nginx)
# Place your SSL certificate files in docker/nginx/ssl/
# - cert.pem
# - key.pem

