# ============================================================================
# dLNk Attack Platform - Environment Configuration
# ============================================================================
# คุณใช้ Ollama (Local LLM) เท่านั้น - ฟรี 100% ไม่มีค่าใช้จ่าย
# ============================================================================

# ============================================================================
# LLM CONFIGURATION (Ollama Only - ฟรี 100%)
# ============================================================================

# LLM Provider - ใช้ Ollama เท่านั้น
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://localhost:11434/v1

# Ollama Model Selection (เลือก 1 จาก 5 models ที่คุณมี)
# - llama3:8b-instruct-fp16 (16GB) - แนะนำ: High quality instruction following
# - mixtral:latest (26GB) - Best for complex tasks, reasoning
# - llama3:latest (4.7GB) - Fast and efficient
# - codellama:latest (3.8GB) - Best for code generation
# - mistral:latest (4.4GB) - Good balance
OLLAMA_MODEL=llama3:8b-instruct-fp16

# LLM Generation Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_TOP_P=0.9
LLM_REQUEST_TIMEOUT=120
OLLAMA_TIMEOUT=600

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dlnk_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dlnk_db
DB_USER=user
DB_PASSWORD=password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT & Authentication
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys
API_KEY_LENGTH=32
API_KEY_PREFIX=dlnk_

# ============================================================================
# WORKSPACE & STORAGE
# ============================================================================

WORKSPACE_DIR=workspace
LOOT_DIR=workspace/loot
UPLOAD_DIR=workspace/uploads
LOG_DIR=workspace/logs
ATTACK_DIR=workspace/attacks

# ============================================================================
# C2 & BACKDOOR CONFIGURATION
# ============================================================================

C2_SERVER_HOST=0.0.0.0
C2_SERVER_PORT=4444
C2_CALLBACK_INTERVAL=60
C2_JITTER=0.2

# Backdoor Settings
BACKDOOR_ENABLED=true
BACKDOOR_TYPE=reverse_shell
BACKDOOR_PERSISTENCE=true

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Agent Behavior
AGENT_RETRY_ATTEMPTS=3
AGENT_TIMEOUT=300
AGENT_STEALTH_MODE=true
AGENT_EVASION_ENABLED=true

# Specific Agents
SQLMAP_PATH=sqlmap
NMAP_PATH=nmap
METASPLOIT_PATH=msfconsole

# ============================================================================
# WORKFLOW CONFIGURATION
# ============================================================================

# Workflow Settings
WORKFLOW_TIMEOUT=3600
ENABLE_AUTO_WORKFLOW=true
WORKFLOW_SAVE_STATE=true

# Attack Phases
ENABLE_RECONNAISSANCE=true
ENABLE_VULNERABILITY_SCANNING=true
ENABLE_EXPLOITATION=true
ENABLE_POST_EXPLOITATION=true
ENABLE_DATA_EXFILTRATION=true
ENABLE_COVERING_TRACKS=true

# Post-Exploitation Features
ENABLE_PERSISTENCE=true
ENABLE_LATERAL_MOVEMENT=true
ENABLE_PRIVILEGE_ESCALATION=true

# ============================================================================
# TOOL CONFIGURATION
# ============================================================================

# Tool Paths
NUCLEI_PATH=nuclei
NIKTO_PATH=nikto
WPSCAN_PATH=wpscan
GOBUSTER_PATH=gobuster
HYDRA_PATH=hydra
JOHN_PATH=john
HASHCAT_PATH=hashcat

# Tool Settings
TOOL_TIMEOUT=300
GOBUSTER_WORDLIST=/usr/share/wordlists/dirb/common.txt
HYDRA_PASSWORD_LIST=/usr/share/wordlists/rockyou.txt
WPSCAN_API_TOKEN=

# ============================================================================
# TARGET CONFIGURATION (for remote targets)
# ============================================================================

TARGET_HOME_DIR=/home
TARGET_WEB_ROOT=/var/www/html
TMP_DIR=/tmp

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Concurrency
MAX_CONCURRENT_TASKS=10
MAX_CONCURRENT_AGENTS=5

# Timeouts
TARGET_TIMEOUT=600

# Cache
CACHE_ENABLED=true
CACHE_TTL=300

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_SLOW_THRESHOLD=5

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Simulation Mode (true = safe testing, false = real attacks)
SIMULATION_MODE=true

# Features
ENABLE_AI_AGENTS=true
ENABLE_AUTO_EXPLOIT=true
ENABLE_ZERO_DAY_DISCOVERY=false

# ============================================================================
# EXTERNAL SERVICES (ไม่ใช้ - เพื่อการพัฒนาแบบฟรี)
# ============================================================================

# OpenAI (ไม่ใช้)
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4.1-mini

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
