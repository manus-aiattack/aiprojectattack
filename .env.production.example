# dLNk Attack Platform - Production Configuration

# ===== Database Configuration =====
DATABASE_URL=postgresql://dlnk:dlnk_password@localhost:5432/dlnk_db
POSTGRES_PASSWORD=dlnk_password

# ===== API Configuration =====
API_HOST=0.0.0.0
API_PORT=8000

# ===== LLM Configuration =====
OLLAMA_HOST=http://localhost:11434
# Available models: mixtral:latest, llama3:latest, codellama:latest, mistral:latest

# ===== Attack Configuration =====
SIMULATION_MODE=False
MAX_CONCURRENT_ATTACKS=5
WORKSPACE_DIR=/home/ubuntu/dlnk/workspace
LOOT_DIR=/home/ubuntu/dlnk/workspace/loot

# ===== Notification Configuration =====
# Channels: email,telegram,discord (comma-separated)
NOTIFICATION_CHANNELS=

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Telegram Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Notifications
DISCORD_WEBHOOK_URL=

# Notification Triggers
NOTIFY_ON_START=true
NOTIFY_ON_COMPLETE=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_VULNERABILITY=true

# ===== Security Configuration =====
# JWT secret for API authentication
JWT_SECRET=change_this_to_random_string

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FILE=/home/ubuntu/dlnk/logs/dlnk.log

# ===== Redis Configuration (Optional) =====
REDIS_URL=redis://localhost:6379/0

# ===== Advanced Configuration =====
# Enable/disable specific features
ENABLE_ZERO_DAY_HUNTER=true
ENABLE_DATA_EXFILTRATION=true
ENABLE_AUTO_EXPLOITATION=true

# Timeout settings (seconds)
ATTACK_TIMEOUT=3600
AGENT_TIMEOUT=300

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5

# ===== Docker Configuration =====
# Uncomment when using Docker
# DATABASE_URL=postgresql://postgres:postgres@db:5432/dlnk_db
# OLLAMA_HOST=http://ollama:11434
# REDIS_URL=redis://redis:6379/0

